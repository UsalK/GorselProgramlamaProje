       x:Class="GorselProgramlamaProje.AppShell">

    <FlyoutItem Title="Ana Sayfa" Route="MainPage">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Kredi Hesaplama" Route="krediHesaplama">
        <ShellContent ContentTemplate="{DataTemplate local:krediHesaplama}" />
